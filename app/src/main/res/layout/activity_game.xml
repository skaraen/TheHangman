<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game"
    android:background="@drawable/bg3">

    <ImageView
        android:id="@+id/imageStage"
        android:layout_width="219dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/stage0" />

    <TextView
        android:id="@+id/textDashes"
        android:layout_width="338dp"
        android:layout_height="123dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="56dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="J U R _ _ _ _ _ _ _"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/guessLetter"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:ems="10"
        android:fontFamily="casual"
        android:gravity="center"
        android:inputType="textPersonName"
        android:maxLength="1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/buttonGuess"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textGuessCounter"
        android:layout_toEndOf="@+id/guessLetter"
        android:background="#FFD500"
        android:fontFamily="casual"
        android:text="Guess"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textGuesses"
        android:layout_width="332dp"
        android:layout_height="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textDashes"
        android:layout_marginBottom="15dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Guesses made : " />

    <TextView
        android:id="@+id/textInstruction"
        android:layout_width="338dp"
        android:layout_height="63dp"
        android:layout_alignStart="@+id/textDashes"
        android:layout_alignLeft="@id/textDashes"
        android:layout_below="@+id/textDashes"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Instruction" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textDashes"
        android:layout_alignTop="@+id/guessLetter"
        android:fontFamily="casual"
        android:text="Wrong guesses made" />

    <TextView
        android:id="@+id/textGuessCounter"
        android:layout_width="35dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="70dp"
        android:layout_marginEnd="66dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textClue"
        android:layout_width="338dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textDashes"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="-56dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Clue"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textDashes"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-56dp"
        android:layout_marginStart="50dp"
        android:fontFamily="casual"
        android:text="Previous Best : " />

    <TextView
        android:id="@+id/textBestScore"
        android:layout_width="37dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="141dp"
        android:layout_marginTop="11dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="0"
        android:textSize="40sp" />

    <Button
        android:id="@+id/buttonReset"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/guessLetter"
        android:layout_marginStart="77dp"
        android:layout_marginTop="-62dp"
        android:background="#FFD500"
        android:fontFamily="casual"
        android:text="Reset"
        android:textColor="#000000" />
</RelativeLayout>